{
  "name": "gpg-bridge",
  "version": "0.0.1",
  "description": "A very basic bridge to gpg over websockets",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "package-mac": "electron-packager . GPG-Bridge --platform=darwin --arch=x64,arm64 --icon=icons/mac/icon.icns --overwrite",
    "package-linux": "electron-packager . GPG-Bridge --platform=linux --arch=x64 --icon=icons/png/128x128.png --overwrite",
    "package-win": "electron-packager . GPG-Bridge --platform=win32 --arch=x64 --icon=icons/win/icon.ico --overwrite",
    "package-all": "npm run package-mac && npm run package-linux && npm run package-win"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.5",
    "electron": "^33.0.1"
  },
  "dependencies": {
    "kill-port": "^2.0.1",
    "ws": "^8.18.0"
  }
}
